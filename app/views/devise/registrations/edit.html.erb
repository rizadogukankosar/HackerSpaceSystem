<div class="container-lg d-flex justify-content-center align-items-center row mx-auto">


  <h2 class="col-12 text-center mt-4 font-weight-bold">Profilini Düzenle </h2>

  <div class="col-lg-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


      <div class="form-group text-center">
        <div class="row">
          <div class="col-12">
            <%= image_tag user_avatar(resource), class: "rounded-circle" %>
          </div>
          <div class="col-12 mt-3 ml-4">
            <%= f.file_field :avatar %>
          </div>
        </div>
      </div>

  <div class="row justify-content-center">


          <div class="field form-group col-12 mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-email", style:"display:none;"%>
          </div>


          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>


        <div class="field form-group col-12 mt-2">
          <% if @minimum_password_length %>
          <%= f.password_field :password, placeholder:"Şifrenizi Giriniz (Min ".concat(@minimum_password_length.to_s)+ " Karakter)", class:"form-control form-password", style:"display:block;"%>
        <% end %>
        </div>

        <div class="field form-group col-12">
          <%= f.password_field :password_confirmation, class:"form-control form-password", placeholder:"Şifrenizi Tekrar Giriniz", style:"display:block;"%>
        </div>

  </div>


  </div>
  <div class="col-lg-6 justify-content-end align-items-center">
      <div class="field form-group">
        <%= f.label "İsim" %>
        <%= f.text_field :name, class:"form-control", autocomplete:"name"%>
      </div>
      <div class="field form-group">
        <%= f.label "Soyisim" %>
        <%= f.text_field :surname, class:"form-control", autocomplete:"surname"%>
      </div>
      <div class="field form-group">
        <%= f.label "Telefon" %>
        <%= f.number_field :phone, class:"form-control", autocomplete:"phone"%>
      </div>
      <div class="field form-group">
        <%= f.label "Okul Numarası" %>
        <%= f.number_field :schoolNumber, class:"form-control", autocomplete:"schoolNumber"%>
      </div>
    </div>
    <div class="col-12 mt-4">
      <div class="field form-group">
        <%= f.label "*Güncellemek İçin Mevcut Şifrenizi Giriniz".titleize %>
        <%= f.password_field :current_password, class:"form-control"%>
      </div>
    <div class="d-flex justify-content-between" id= "edit-user-buttons">

    <div id="update-back-buttons">

        <div class="actions">
          <%= f.submit "Güncelle", class:"btn btn-info"%>
        </div>
      <% end %>

      <div>
         <%= link_to "Ana Sayfaya Geri Dön", root_path, class:"btn btn-dark mt-2"%>
      </div>


    </div>



    <%= button_to "Hesabımı Sil", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger mt-2", id:"user-cancel-btn"%>
    </div>

  </div>



  </div>


</div>
